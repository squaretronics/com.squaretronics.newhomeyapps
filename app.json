{
    "id": "eu.jeroensomhorst.newhomeyapps",
    "name": {
        "en": "New Homey Apps",
		"nl": "Nieuwe Homey Apps"
    },
    "version": "1.2.0",
	"compatibility": ">=1.5.0",
	"sdk": 2,
    "author": {
		"name": "Jeroen Somhorst",
		"email": "j.somhorst@gmail.com"
	},
    "description": {
        "en": "Flow card that triggers when new Homey apps are available.",
        "nl": "Flow kaart die triggert als er nieuwe Homey apps zijn."
    },
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
    "category": "tools",
	"flow": {
		"triggers": [
			{
				"id": "new_app",
				"title": {
					"en": "There's a new Homey app",
					"nl": "Er is een nieuwe Homey app"
				},
				"tokens":
				[
					{
						"name": "AppID",
						"type": "string",
						"title": {
							"en": "ID",
							"nl": "ID"
						},
						"example": "com.squaretronics.newhomeyapps"
					},
					{
						"name": "AppName",
						"type": "string",
						"title": {
							"en": "Name",
							"nl": "Naam"
						},
						"example": "Acme Corp."
					}
				]
			},
			{
				"id": "updated_app",
				"title": {
					"en": "There's an app update",
					"nl": "Er is een app update"
				},
				"tokens":
				[
					{
						"name": "AppVersion",
						"type": "string",
						"title": {
							"en": "Version",
							"nl": "Versie"
						},
						"example": "1.0.1"
					},
					{
						"name": "AppID",
						"type": "string",
						"title": {
							"en": "ID",
							"nl": "ID"
						},
						"example": "com.squaretronics.newhomeyapps"
					},
					{
						"name": "AppName",
						"type": "string",
						"title": {
							"en": "Name",
							"nl": "Naam"
						},
						"example": "Acme Corp."
					}
				]
			}
		]
	}
}